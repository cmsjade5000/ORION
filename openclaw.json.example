{
  "_comment": "Example OpenClaw config for ORION local development. Runtime config lives at ~/.openclaw/openclaw.json. Do not store secrets in Git.",
  "agents": {
    "defaults": {
      "workspace": "/Users/corystoner/Desktop/ORION",
      "model": {
        "_comment_model": "Default posture: use Google Gemini directly (no OpenRouter/OpenAI). Pin a specific model for stable agent hygiene.",
        "_comment_fallbacks": "Keep fallbacks provider-restricted. Optional: add nvidia-build/moonshotai/kimi-k2-5 after you configure NVIDIA Build (see docs/NVIDIA_BUILD_KIMI.md).",
        "primary": "google/gemini-2.5-flash-lite",
        "fallbacks": [
          "google/gemini-2.5-flash-lite"
        ]
      },
      "compaction": {
        "mode": "safeguard"
      },
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    },
    "list": [
      {
        "id": "main",
        "subagents": {
          "allowAgents": ["*"]
        }
      }
    ]
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "capabilities": {
        "inlineButtons": "allowlist"
      },
      "tokenFile": "~/.openclaw/secrets/telegram.token",
      "dmPolicy": "allowlist",
      "allowFrom": ["<CORY_TELEGRAM_USER_ID>"],
      "groupPolicy": "allowlist",
      "groupAllowFrom": ["<CORY_TELEGRAM_USER_ID>"],
      "groups": {
        "<TELEGRAM_GROUP_ID>": {}
      },
      "commands": {
        "native": false,
        "nativeSkills": false
      },
      "reactionLevel": "ack",
      "streamMode": "partial"
    },
    "discord": {
      "_comment": "Discord channel (requires enabling the bundled OpenClaw `discord` plugin). Store DISCORD_BOT_TOKEN in ~/.openclaw/.env (see KEEP.md).",
      "enabled": false,
      "token": "${DISCORD_BOT_TOKEN}",
      "commands": {
        "native": "auto",
        "nativeSkills": "auto"
      },
      "replyToMode": "first",
      "dm": {
        "policy": "allowlist",
        "allowFrom": ["<CORY_DISCORD_USER_ID>"]
      },
      "groupPolicy": "allowlist",
      "guilds": {
        "<DISCORD_GUILD_ID>": {
          "requireMention": true,
          "channels": {
            "<DISCORD_CHANNEL_ID>": {
              "allow": true,
              "autoThread": true
            }
          }
        }
      }
    }
  },
  "env": {
    "vars": {
      "ORION_MINIAPP_URL": "https://<your-miniapp-host>"
    }
  },
  "models": {
    "_comment": "Optional: custom provider config for NVIDIA Build (OpenAI-compatible). Store NVIDIA_API_KEY in ~/.openclaw/.env (see KEEP.md).",
    "mode": "merge",
    "providers": {
      "nvidia-build": {
        "api": "openai-completions",
        "baseUrl": "https://integrate.api.nvidia.com/v1",
        "apiKey": "${NVIDIA_API_KEY}",
        "models": [
          {
            "id": "moonshotai/kimi-k2-5",
            "name": "Kimi K2.5 (NVIDIA Build)"
          }
        ]
      }
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      },
      "discord": {
        "enabled": false
      }
    }
  }
}
